<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminSamokat.Views.Profile"
             Title="Profile">
    <StackLayout Padding="20">
        <Label Text="Ваш профиль" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="Фамилия"></Label>
        <Label x:Name="surnameLabel"></Label>
        <Label Text="Имя"></Label>
        <Label x:Name="nameLabel"></Label>
        <Label Text="Отчество"></Label>
        <Label x:Name="patronymicLabel"></Label>
        <Label Text="Пароль"></Label>
        <Label x:Name="loginLabel"></Label>
        <Button Text="Редактировать профиль" Clicked="OnEditProfileButtonClicked"></Button>
    </StackLayout>
</ContentPage>