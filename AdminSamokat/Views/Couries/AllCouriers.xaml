<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminSamokat.Views.Couries.AllCouriers">
    <VerticalStackLayout Spacing="10" Padding="10">
        <CollectionView x:Name="UsersCollectionView" 
                        SelectionMode="Single" 
                        SelectionChanged="OnCourierSelected">
            <!-- Добавлен Padding для CollectionView -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="10,5" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*" Padding="10">
                            <!-- Padding для Grid -->
                            <Image Source="courier_icon.png" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   Aspect="AspectFill" 
                                   Grid.RowSpan="3"
                                   Margin="0,0,15,0"/>
                            <Label Text="{Binding Name}" 
                                   FontAttributes="Bold" 
                                   FontSize="16" 
                                   Grid.Column="1" />
                            <Label Text="{Binding Surname}" 
                                   FontSize="14" 
                                   Grid.Row="1" 
                                   Grid.Column="1" />
                            <Label Text="{Binding Login}" 
                                   FontSize="12" 
                                   TextColor="Gray" 
                                   Grid.Row="2" 
                                   Grid.Column="1" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
