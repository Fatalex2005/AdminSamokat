<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminSamokat.Views.Auth.Login"
             Title="Аутентификация">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Image Source="logo.png" HorizontalOptions="Center" WidthRequest="200" HeightRequest="200"></Image>
        <Label Text="Приветствуем в скромненьком приложении Самокат Про для администраторов!" FontSize="24" HorizontalTextAlignment="Center"></Label>
        <Label Text="Введите свой логин и пароль чтобы продолжить!" FontSize="24" HorizontalTextAlignment="Center"></Label>
        <Entry x:Name="LoginEntry" Placeholder="Введите логин" Margin="10"></Entry>
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" Margin="10"></Entry>
        <Button Text="Войти" Margin="10" Clicked="OnLoginButtonClicked"></Button>
    </StackLayout>
</ContentPage>